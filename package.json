{
  "name": "img-convert",
  "version": "1.1.2",
  "description": "Converts images using ImageMagick CLI",
  "main": "dist/img-convert.js",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
